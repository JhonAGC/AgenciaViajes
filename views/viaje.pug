                            | #{viaje.disponibles} disponibles        

                    .col-md-2
                        
                        p(class="text-center")
                            svg.icon.icon-tabler.icon-tabler-coin(xmlns='http://www.w3.org/2000/svg', width='32', height='32', viewBox='0 0 24 24', stroke-width='1.5', stroke='#ff2825', fill='none', stroke-linecap='round', stroke-linejoin='round')
                                path(stroke='none', d='M0 0h24v24H0z', fill='none')
