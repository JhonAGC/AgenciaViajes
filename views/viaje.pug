extends ./layout/index

block contenido
    main.container.mt-5
        h1(class="text-center") #{viaje.titulo}
        .row
            .col-md-5   
                img(src=`/img/destinos_${viaje.imagen}.jpg`, alt="imagen del destino", class="img-fluid ")
            .col-md-7 
                p(class="text-justify") #{viaje.descripcion}
                .row
                    .col-md-6
                        p(class="text-center") 
                            svg.icon.icon-tabler.icon-tabler-calendar-due(xmlns='http://www.w3.org/2000/svg', width='32', height='32', viewBox='0 0 24 24', stroke-width='1.5', stroke='#ff2825', fill='none', stroke-linecap='round', stroke-linejoin='round')
                                path(stroke='none', d='M0 0h24v24H0z', fill='none')
