                                path(d='M4 11h16')
                                |   
                                path(d='M12 16m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0')
                        p(class="text-center")                      
                            |#{viaje.fecha_ida} - #{viaje.fecha_vuelta}            

                    .col-md-4
                        p(class="text-center") 
                            svg.icon.icon-tabler.icon-tabler-users-group(xmlns='http://www.w3.org/2000/svg', width='32', height='32', viewBox='0 0 24 24', stroke-width='1.5', stroke='#ff2825', fill='none', stroke-linecap='round', stroke-linejoin='round')
